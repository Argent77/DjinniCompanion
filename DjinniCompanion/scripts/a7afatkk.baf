// Plain melee attack
IF
  StateCheck(Myself, STATE_INVISIBLE)
  !HaveSpell(WIZARD_SHOCKING_GRASP)
  !HaveSpell(WIZARD_MAGIC_MISSILE)
  See("Korgan")
  Global("A7KorganDuel", "GLOBAL", 3)
  GlobalGT("KorganFightInit", "LOCALS", 1)
THEN RESPONSE #100
  AttackOneRound("Korgan")
END

