  TimerExpired(167)
  Global("A7KorganDuel", "GLOBAL", 3)
  GlobalGT("KorganFightInit", "LOCALS", 1)
THEN RESPONSE #100
  StartTimer(167, 6)
  Spell("Korgan", WIZARD_MAGIC_MISSILE)
