// Scripts for Sarevok

// Initializing Sarevok's banter timer
IF
  Global("A7SarevokBanterNPCTimer", "GLOBAL", 0)
THEN
  RESPONSE #100
    RealSetGlobalTimer("A7SarevokBanterNPCTimer", "GLOBAL", 3000)
  RESPONSE #100
    RealSetGlobalTimer("A7SarevokBanterNPCTimer", "GLOBAL", 3200)
  RESPONSE #100
    RealSetGlobalTimer("A7SarevokBanterNPCTimer", "GLOBAL", 3400)
  RESPONSE #100
    RealSetGlobalTimer("A7SarevokBanterNPCTimer", "GLOBAL", 3600)
  RESPONSE #100
    RealSetGlobalTimer("A7SarevokBanterNPCTimer", "GLOBAL", 3800)
END

// Keep delaying first banter until after Afaaq's party introduction
IF
  OR(2)
    Global("A7BanterIntro", "GLOBAL", 0)
    Global("A7AfaaqSummoned", "GLOBAL", 0)
  RealGlobalTimerExpired("A7SarevokBanterNPCTimer", "GLOBAL")
THEN RESPONSE #100
  RealSetGlobalTimer("A7SarevokBanterNPCTimer", "GLOBAL", 3600)
END

